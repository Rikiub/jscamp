{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"skipLibCheck": true,

		"moduleResolution": "bundler",
		"composite": true,
		"noEmit": true,

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"erasableSyntaxOnly": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedSideEffectImports": true
	}
}
