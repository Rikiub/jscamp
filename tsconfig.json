{
	"compilerOptions": {
		"outDir": "./dist",

		"target": "esnext",
		"module": "esnext",
		"skipLibCheck": true,

		"moduleResolution": "bundler",
		"isolatedModules": true,
		"composite": true,
		"noEmit": true,

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"erasableSyntaxOnly": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedSideEffectImports": true
	},
	"exclude": ["node_modules", "dist", "build"]
}
